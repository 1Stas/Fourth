				form(action="form.html")
					.name_w
						.weight
							label
								span ИМЯ:*
								input(type="text" name="name" placeholder="БАРСИК")
							label
								span ВЕС (КГ):*
								input(type="text" name="weight" placeholder="7")
							label
								span ВОЗРАСТ (ЛЕТ):
								input(type="text" name="age" placeholder="7")
						.radio
							label
								input(type="radio" name="radio" checked)
								span ПОХУДЕНИЕ
							label
								input(type="radio" name="radio")
								span НАБОР МАССЫ
							label
								input(type="radio" name="radio")
