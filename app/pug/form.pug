						h2.b-a Контактные данные (владельца кота)
						label
							span E-MAIL:*
							input(type="email" name="email" placeholder="EMAIL@GMAIL.COM")
							span.cont-icon
						label
							span ТЕЛЕФОН:*
							input(type="phone" name="phone" placeholder="8(960) 900-60-90")
							span.cont-icon
					.comment
						h2.b-a Комментарий
						textarea(name="field", cols="30", rows="1" placeholder="РАССКАЖИТЕ ОБО ВСЕХ ПОВАДКАХ КОТА")
					.checking
						h2.b-a Дополнительно
						.check_wrap
							label
								input(type="checkbox" checked) 
								span САХАРОЗАМЕНИТЕЛЬ
							label
								input(type="checkbox") 
								span ПИТЬЕВАЯ ВОДА
							label
								input(type="checkbox") 
								span МОЛОКО
							label
								input(type="checkbox") 
								span ВИТАМИНЫ
						p
							input(type="submit" value="ОТПРАВИТЬ ЗАЯВКУ") 
							span *-Обязательные поля
